{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["ES2021"],
    "types": ["@raycast/api", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
